<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical"
    tools:context=".EditActivity">

    <EditText
        android:id="@+id/editactivityTitleID"
        android:hint="Enter Title"
        android:layout_width="match_parent"
        android:textColor="@color/yellow"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/editactivityDescriptionID"
        android:hint="Enter Description"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textColor="@color/yellow"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/editactivityDateID"
        android:text="Date"
        android:layout_marginTop="15dp"
        android:background="@color/purple"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/editactivityTimeID"
        android:text="Time"
        android:layout_marginTop="15dp"
        android:background="@color/purple"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/editactivitysecondIncreaseID"
            android:text="+30sec"
            android:layout_marginTop="5dp"
            android:background="@color/purple"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="45dp" />

    </LinearLayout>

    <Button
        android:onClick="EditInformation"
        android:text="Edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:background="@color/purple"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>